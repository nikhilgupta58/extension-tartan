{
  "manifest_version": 3,
  "name": "HRMS",
  "version": "1.0",
  "description": "Income Verification",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "scripting"
  ],
  "action": {
    "default_title": "DOM Extractor",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}